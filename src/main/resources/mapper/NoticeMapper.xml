<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pkm.pkmdb.dao.NoticeDao">

    <select id="getNoticeById" parameterType="int" resultType="com.pkm.pkmdb.object.Notice">
       select * from notice where id=#{id}
    </select>
    <select id="getAllNotice"
            resultType="com.pkm.pkmdb.object.Notice">
       select * from notice
    </select>
    <select id="searchNotice" resultType="com.pkm.pkmdb.object.Notice" parameterType="String">
       select * from notice where title like #{keyword}
    </select>
    <delete id="delNotice" parameterType="int">
        delete from  notice where id=#{id}
    </delete>
    <update id="upNotice" parameterType="com.pkm.pkmdb.object.Notice">
        update notice set title=#{title},detaile=#{details},time=#{time},user_id=#{user_id}
       where id=#{id}
    </update>
    <insert id="addNotice" parameterType="com.pkm.pkmdb.object.Notice">
        insert into ball_pack(title,details,time,user_id) values(#{title},#{details},#{time},#{user_id})
    </insert>
</mapper>